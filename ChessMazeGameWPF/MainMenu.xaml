<Page x:Class="ChessMazeGameWPF.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ChessMazeGameWPF"
      mc:Ignorable="d"
      Title="Chess Maze Game - MainMenu" Height="720" Width="1280">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/backgroundBoard.png" Stretch="Fill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Images/black-knight.png" Width="200" Height="200" Margin="0,0,0,20"/>
            <TextBlock Text="Chess Maze Game" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="New Game" Width="100" Height="30" Margin="0,10" Click="NextPageButton_Click"/>
            <Button Content="Exit" Width="100" Height="30" Margin="0,10" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
